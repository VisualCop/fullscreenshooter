{
  "compilerOptions": {
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2017",
    "outDir": "dist",
    "declaration": true,
    "noUnusedParameters": true,
    "plugins": [
      {
        "name": "tslint-language-service",
        "alwaysShowRuleFailuresAsWarnings": true
      }
    ]
  },
  "include": ["./src/*.ts", "./typings/*.d.ts"]
}
